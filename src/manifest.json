	"page_action": {
		"default_icon": "icons/tabManager.png",
		"default_title": "Tab Manager"
	},

	"background": {
		"scripts": ["background.js"]
	},

	"permissions": [
		"tabs",
		"storage",
		"clipboardWrite"
	]
}
